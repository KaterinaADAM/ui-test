<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Wiki Functional Test" verbose="1" preserve-order="true">
	
	<test name="wiki-func-spaceswitcher" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.spaceswitcher.Wiki_Navigation_Across_Space" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.spaceswitcher.Wiki_SpaceSwitcher" />
		</classes>
	</test>
	
	<test name="wiki-func-info" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_RelatedPage_Add" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_RelatedPage_Delete_Rename" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_RelatedPage_View" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_Version_Compare" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_Version_Restore" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_Version_View" />
		</classes>
	</test>

	<test name="wiki-func-template" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Add" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Delete" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Edit" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Search" />
		</classes>
	</test>

	<test name="wiki-func-macro" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.macro.Wiki_Macro_Add" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.macro.Wiki_Macro_Edit" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.macro.Wiki_Macro_Othercheck" />
		</classes>
	</test>

	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>
