<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Wiki Functional Test" verbose="1" preserve-order="true">
	<test name="wiki-func-search" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class name="org.exoplatform.selenium.platform.wiki.functional.search.Wiki_Advanced_Search" />
			<class name="org.exoplatform.selenium.platform.wiki.functional.search.Wiki_Quick_Search" />
			<class name="org.exoplatform.selenium.platform.wiki.functional.search.Wiki_Space_Switcher" />
		</classes>
	</test>

	<test name="wiki-func-spacepermission" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.spacepermission.Wiki_SpacePermission_Add" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.spacepermission.Wiki_SpacePermission_Delete" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.spacepermission.Wiki_SpacePermission_Edit" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.spacepermission.Wiki_SpacePermission_Others" />
 		</classes>
	</test>

	<test name="wiki-func-template" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Add" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Delete" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Edit" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Other" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.template.Wiki_Template_Search" />
 		</classes>
	</test>
	
	<test name="wiki-func-macro" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.macro.Wiki_Macro_Add" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.macro.Wiki_Macro_Edit" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.macro.Wiki_Macro_Othercheck" />
 		</classes>
	</test>

	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>
