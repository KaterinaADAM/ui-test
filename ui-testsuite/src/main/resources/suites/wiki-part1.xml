<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Wiki Functional Test" verbose="1" preserve-order="true">
	<test name="wiki-func-attachment" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.attachment.Wiki_Attachment_Add" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.attachment.Wiki_Attachment_Delete" />
 		</classes>
	</test>

	<test name="wiki-func-basicaction" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.basicaction.Wiki_BasicAction_Add" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.basicaction.Wiki_BasicAction_Delete" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.basicaction.Wiki_BasicAction_Edit" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.basicaction.Wiki_BasicAction_Intergration" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.basicaction.Wiki_BasicAction_Move" />
 		</classes>
	</test>

	<test name="wiki-func-info" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_RelatedPage" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_Version_Compare" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_Version_Restore" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_Version_View" />
 		</classes>
	</test>

	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>