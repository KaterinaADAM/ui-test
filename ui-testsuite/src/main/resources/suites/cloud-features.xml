<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="eXo Cloud Test" verbose="1" preserve-order="true">
	<test name="cloud-features" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class name="org.exoplatform.selenium.cloud.features.Cloud_Features_FirstLoginWizard"/>
			<class name="org.exoplatform.selenium.cloud.features.Cloud_Features_DefaultSpace"/>
			<class name="org.exoplatform.selenium.cloud.features.Cloud_Features_NewUserActivity"/>
			<class name="org.exoplatform.selenium.cloud.features.Cloud_Features_InvitationGadget"/>
		</classes>
	</test>
	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>