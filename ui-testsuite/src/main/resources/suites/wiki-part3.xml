<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Wiki Functional Test" verbose="1" preserve-order="true">
	<test name="wiki-func-pagepermission" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Add" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Delete" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_CheckPermission" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Other" />
		</classes>
	</test>

	<test name="wiki-func-search" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.search.Wiki_Advanced_Search" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.search.Wiki_Quick_Search" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.search.Wiki_Space_Switcher" />
		</classes>
	</test>
	
	<test name="wiki-func-spacepermission" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.permissions.wikipermissions.Wiki_Permissions_WikiPermissions_Add" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.permissions.wikipermissions.Wiki_Permissions_WikiPermissions_Delete" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.permissions.wikipermissions.Wiki_Permissions_WikiPermissions_CheckPermission" />
		</classes>
	</test>
	
	<test name="wiki-func-attachment" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.attachment.Wiki_Attachment_Add" /> 
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.attachment.Wiki_Attachment_Delete" />	
		</classes>
	</test>
	
	<test name="wiki-func-activities" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Add" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Delete" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Update" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Dislike" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Display" />
		</classes>
	</test>

	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>
