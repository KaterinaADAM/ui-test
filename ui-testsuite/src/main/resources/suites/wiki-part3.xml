<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Wiki Functional Test" verbose="1" preserve-order="true">
	<test name="wiki-func-pagepermission" enabled="true" preserve-order="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Add" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Delete" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Edit" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Other" />
		</classes>
	</test>

	<test name="wiki-func-spaceswitcher" enabled="true" preserve-order="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.spaceswitcher.Wiki_SpaceSwitcher_Display" />
 			<class name="org.exoplatform.selenium.platform.wiki.functional.spaceswitcher.Wiki_SpaceSwitcher" />
		</classes>
	</test>

	<test name="wiki-func-activities" enabled="true" preserve-order="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
 			<class name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Add" />
			<class name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Delete" />
			<class name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Update" />
			<class name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Dislike" />
			<class name="org.exoplatform.selenium.platform.wiki.functional.activities.Wiki_Activity_Display" />
		</classes>
	</test>

	<test name="wiki-func-navigationacrossspace" enabled="true" preserve-order="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>

			<class name="org.exoplatform.selenium.platform.wiki.functional.navigationacrossspace.Wiki_Navigation_Across_Space" />
		</classes>
	</test>

	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>
