<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Platform Functional Test" verbose="1" preserve-order="true">

	<test name="wiki-functional-test" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package name="org.exoplatform.selenium.platform.wiki.functional.*" />
		</packages>
	</test>

	<test name="wiki-func-pagepermission" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Add" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Delete" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Edit" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.pagepermission.Wiki_PagePermission_Other" />
		</classes>
	</test>
	<test name="wiki-func-attachment" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package
				name="org.exoplatform.selenium.platform.wiki.functional.attachment.*" />
		</packages>
	</test>

	<test name="wiki-func-basicaction" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package
				name="org.exoplatform.selenium.platform.wiki.functional.basicaction.*" />
		</packages>
	</test>

	<test name="wiki-func-info" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_Version_Compare" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_Version_Restore" />
			<class
				name="org.exoplatform.selenium.platform.wiki.functional.information.Wiki_PageInformation_Version_View" />
		</classes>
	</test>
	
	<test name="wiki-func-search" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package name="org.exoplatform.selenium.platform.wiki.functional.search.*" />
		</packages>
	</test>

	<test name="wiki-func-spacepermission" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package
				name="org.exoplatform.selenium.platform.wiki.functional.spacepermission.*" />
		</packages>
	</test>

	<test name="wiki-func-template" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package
				name="org.exoplatform.selenium.platform.wiki.functional.template.*" />
		</packages>
	</test>
	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>