<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="ECMS Functional Test" verbose="1" preserve-order="true">
	<test name="ecms-func-repository" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package name="org.exoplatform.selenium.platform.ecms.functional.admin.repository.*" />
		</packages>
	</test>
	<test name="ecms-func-advanced" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package name="org.exoplatform.selenium.platform.ecms.functional.admin.advanced.*" />
		</packages>
	</test>
	<test name="ecms-func-template" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package name="org.exoplatform.selenium.platform.ecms.functional.admin.template.*" />
		</packages>
	</test>
	<test name="ecms-func-explorer" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
			</run>
		</groups>
		<packages>
			<package name="org.exoplatform.selenium.platform.ecms.functional.admin.explorer.*" />
		</packages>
	</test>
	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>