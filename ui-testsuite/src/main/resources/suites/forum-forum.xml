	</test>
	<test name="forum-func-forum-usersetting" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
				<!-- <exclude name="error" /> -->
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.forum.functional.forum.usersettings.Forum_Forum_UserSettings" />
		</classes>
	</test>
	<listeners>
		<listener class-name="org.exoplatform.selenium.TestReportListener" />
	</listeners>
</suite>