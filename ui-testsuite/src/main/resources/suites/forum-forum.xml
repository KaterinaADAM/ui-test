<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Platform Functional Test" verbose="1" preserve-order="true">
	<test name="forum-func-forum-topic" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
				<!-- <exclude name="error" /> -->
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.forum.functional.forum.topic.Forum_Forum_Topic_ActiveSortWatchAndUnwatch" />
			<class
				name="org.exoplatform.selenium.platform.forum.functional.forum.topic.Forum_Forum_Topic_Add" />
			<class
				name="org.exoplatform.selenium.platform.forum.functional.forum.topic.Forum_Forum_Topic_Tag" />
		</classes>
	</test>
	<test name="forum-func-forum-post" enabled="true">
		<groups>
			<run>
				<exclude name="pending" />
				<!-- <exclude name="error" /> -->
			</run>
		</groups>
		<classes>
			<class
				name="org.exoplatform.selenium.platform.forum.functional.forum.post.Forum_Forum_Post_BBCode" />
			<class
				name="org.exoplatform.selenium.platform.forum.functional.forum.post.Forum_Forum_Post_Move" />
